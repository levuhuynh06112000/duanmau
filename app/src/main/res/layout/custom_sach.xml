<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="10">

        <vn.sefviapp.asm_ps09105.View.ImageHelper
            android:id="@+id/imgBookItem"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:src="@drawable/img_sach" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="8">
            <TextView
                android:id="@+id/txtCustomTenSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sách Lập Trình"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/txtCustomSoLuongSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_weight="1"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/imgCustomEditSach"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_edit_black_24dp"
            android:tint="@color/colorPrimary"
            android:padding="10dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/imgCustomDeleteSach"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="@color/colorPrimary"
            android:padding="10dp"
            android:layout_weight="1"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>