<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi Tiết Thể Loại"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:background="@drawable/text_title"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Thể Loại:     "
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txtTenDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa"
            android:textStyle="italic"
            android:padding="10dp"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô Tả Thể Loại: "
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txtMoTaDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa"
            android:textStyle="italic"
            android:padding="10dp"
            android:textSize="18sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnDialogDongChiTiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đóng"
        android:background="@drawable/login_button_bk"
        android:textColor="@color/colorWhite"
        android:layout_margin="5dp"/>
</LinearLayout>