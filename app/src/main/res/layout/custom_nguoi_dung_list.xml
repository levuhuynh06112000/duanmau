<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="10"
        >
        <vn.sefviapp.asm_ps09105.View.ImageHelper
            android:id="@+id/imgUserItem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_sach"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="8">
            <TextView
                android:id="@+id/txtCustomtenNguoiDung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lâm Văn Thông"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/txtCustomEmailNguoiDung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="vanthongxtt@gmail.com"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_weight="1"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/imgCustomDeleteNguoiDungAll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="@color/colorPrimary"
            android:padding="10dp"
            android:layout_weight="0"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>